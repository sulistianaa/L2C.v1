@model IEnumerable<InventoryGudang.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<h1>Items</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.TransactionType)</th>
            <th>@Html.DisplayNameFor(model => model.DateIn)</th>
            <th>@Html.DisplayNameFor(model => model.DateOut)</th>
            <th>@Html.DisplayNameFor(model => model.Supplier.Name)</th>
            @if (User.IsInRole("Admin"))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.TransactionType)</td>
                <th>@Html.DisplayFor(modelItem => item.DateIn)</th>
                <th>@Html.DisplayFor(modelItem => item.DateOut)</th>
                <td>@Html.DisplayFor(modelItem => item.Supplier.Name)</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ItemId })">Edit</a> |
                        <a href="@Url.Action("Delete", new { id = item.ItemId })">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>